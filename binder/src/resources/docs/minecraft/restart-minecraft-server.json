{
    "description": "Restart a Minecraft server",
    "method": "POST",
    "endpoint": "/api/v1/minecraft/restart",
    "security": [
        {
            "type": "Bearer token",
            "name": "Authorization",
            "value": "Bearer <token>",
            "in": "headers"
        }
    ],
    "parameters": [
        {
            "name": "server",
            "description": "The ID of the server to restart",
            "required": true,
            "type": "number",
            "in": "query"
        }
    ],
    "responses": [
        {
            "status": 200,
            "description": "Successful server restart",
            "schema": [
            ]
        },
        {
            "status": 403,
            "description": "The user does not have permission to restart the server"
        },
        {
            "status": 404,
            "description": "The server provided either does not exist or is not running"
        }
    ]
}