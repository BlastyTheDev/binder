{
    "description": "Stop a Minecraft server",
    "method": "POST",
    "endpoint": "/api/v1/minecraft/stop",
    "security": [
        {
            "type": "Bearer token",
            "name": "Authorization",
            "value": "Bearer <token>",
            "in": "headers"
        }
    ],
    "parameters": [
        {
            "name": "server",
            "description": "The ID of the server to stop",
            "required": true,
            "type": "number",
            "in": "query"
        }
    ],
    "responses": [
        {
            "status": 200,
            "description": "Successful server stop",
            "schema": [
            ]
        }
    ]
}